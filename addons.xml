<?xml version="1.0" encoding="UTF-8"?>
<addons>
<addon id="plugin.video.ewtnplayer"
       name="EWTN Player"
       version="1.0.2"
       provider-name="OpenView Helper">
  <requires>
   <import addon="xbmc.python" version="2.1"/>
   <import addon="plugin.video.youtube" version="3.0.0"/>
  </requires>
  <extension point="xbmc.python.pluginsource" library="default.py">
        <provides>video</provides>
  </extension>
  <extension point="xbmc.addon.metadata">
    <summary lang="en">A simple media player for EWTN content</summary>
    <description lang="en">Web: http://openviewhelper.blogspot.co.uk/[CR][CR]email: openviewhelp@gmail.com[CR][CR]Twitter:  @OpenViewHelper</description>
    <platform>all</platform>
	<language>en</language>
	<email>report any issues with this addon to openviewhelp@gmail.com</email>
  </extension>
</addon>

<addon id="repository.openviewhelper" name="OpenElf's Addon Repository" version="1.0" provider-name="OpenElf">
	<extension point="xbmc.addon.repository" name="OpenElf's Addon Repository">
		<info compressed="false">http://github.com/OpenElf/openviewhelper/raw/master/addons.xml</info>
		<checksum>http://github.com/OpenElf/openviewhelper/raw/master/addons.xml.md5</checksum>
		<datadir zip="true">http://github.com/OpenElf/openviewhelper/raw/master/zips</datadir>
	</extension>
	<extension point="xbmc.addon.metadata">
		<summary>Install OpenView Helper Addons</summary>
		<description>Download and install addons from OpenElf.......For Support Visit http://openviewhelper.blogspot.co.uk/</description>
		<platform>all</platform>
	</extension>
</addon>
</addons>
