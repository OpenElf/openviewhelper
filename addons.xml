<?xml version="1.0" encoding="UTF-8"?>
<addons>
<addon id="plugin.video.ewtnplayer"
       name="EWTN Player"
       version="1.1.1"
       provider-name="OpenView Helper">
  <requires>
   <import addon="xbmc.python" version="2.1"/>
   <import addon="plugin.video.youtube" version="3.0.0"/>
  </requires>
  <extension point="xbmc.python.pluginsource" library="default.py">
        <provides>video</provides>
  </extension>
  <extension point="xbmc.addon.metadata">
    <summary lang="en">A simple media player for EWTN content</summary>
    <description lang="en">Web: http://openviewhelper.blogspot.co.uk/[CR][CR]email: openviewhelp@gmail.com[CR][CR]Twitter:  @OpenViewHelper</description>
    <platform>all</platform>
	<language>en</language>
	<email>report any issues with this addon to openviewhelp@gmail.com</email>
  </extension>
</addon>

<addon id="plugin.video.openviewportal"
       name="OpenView"
       version="1.0.11"
       provider-name="OpenView Helper">
  <requires>
        <import addon="xbmc.python" version="2.1.0"/>
        <import addon="script.module.t0mm0.common" version="1.1.0"/>
        <import addon="plugin.video.youtube" version="3.0.0"/>
  </requires>
  <extension point="xbmc.python.pluginsource" library="default.py">
        <provides>video</provides>
  </extension>
  <extension point="xbmc.addon.metadata">
    <summary lang="en">OpenView Getting Started, Status, Movies and TV Shows</summary>
    <description lang="en">This addon provides OpenView Status and Support[CR][CR]email: openviewhelp@gmail.com[CR][CR]Twitter:  @OpenViewHelper</description>
    <platform>all</platform>
	<language>en</language>
	<email>report any issues with this addon to openviewhelp@gmail.com</email>
  </extension>
</addon>

<addon id="repository.openviewhelper" name="OpenView Helper" version="1.1" provider-name="OpenElf">
	<extension point="xbmc.addon.repository" name="OpenElf Addon Repository">
		<info compressed="false">http://raw.github.com/OpenElf/openviewhelper/master/addons.xml</info>
		<checksum>http://raw.github.com/OpenElf/openviewhelper/master/addons.xml.md5</checksum>
		<datadir zip="true">http://raw.github.com/OpenElf/openviewhelper/master/zips</datadir>
	</extension>
	<extension point="xbmc.addon.metadata">
		<summary>Addons specifically for OpenView only</summary>
		<description>Download and install addons from OpenElf for the OpenView platform only</description>
		<platform>all</platform>
	</extension>
</addon>
</addons>
